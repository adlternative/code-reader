{
  "name": "code-reader",
  "displayName": "code-reader",
  "description": "code-reader",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.96.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "viewsWelcome": [
      {
        "view": "code-reader",
        "contents": "Two great things here: 1. Chat with other developers 2. Mark Code as Read/Unread"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "code-reader-container",
          "title": "Code Reader",
          "icon": "media/dep.svg"
        }
      ]
    },
    "views": {
      "code-reader-container": [
        {
          "id": "code-reader",
          "name": "code reader"
        }
      ]
    },
    "commands": [
      {
        "command": "codeReaderExplorer.refresh",
        "title": "Refresh CodeReader Explorer"
      },
      {
        "command": "codeReaderExplorer.openFile",
        "title": "Open File"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.96.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.22.0",
    "@typescript-eslint/parser": "^8.22.0",
    "eslint": "^9.19.0",
    "typescript": "^5.7.3",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1"
  }
}
